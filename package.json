    "bs58": "^6.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.7.7",
    "publint": "^0.2.11",
    "typescript": "^5.6.3",
    "vite-plugin-swc-transform": "^1.0.1",
    "viteup": "^0.0.4"
  }
}
